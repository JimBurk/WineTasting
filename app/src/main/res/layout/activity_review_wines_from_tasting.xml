<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vines6"
    android:layout_margin="15dp"
    tools:context="edu.orangecoastcollege.cs273.jburk.winetasting.ReviewWinesFromTastingActivity">

    <ListView
        android:id="@+id/winesListView"
        android:layout_width="342dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tastingLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="124dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rating_border"
        android:padding="8dp"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:text="@string/review_tasting_label"
        android:textColor="@color/midNightBlack"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/winesListView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tastingDetailTextView"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/wine_border"
        android:padding="8dp"
        android:text="TextView"
        android:textColor="@color/midNightBlack"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tastingLabelTextView"
        app:layout_constraintStart_toStartOf="@+id/tastingLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/tastingLabelTextView" />
</android.support.constraint.ConstraintLayout>
