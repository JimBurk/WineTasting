<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="viewWineDetails"
    android:clickable="true"
    android:id="@+id/wineListLinearLayout">

    <ImageView
        android:id="@+id/wineBottleImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/wine_bottle">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vintageListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:layout_columnWeight="1"
                android:text="Vintage"
                android:textAppearance="@color/midNightBlack"
                android:textSize="22sp"
                tools:text="Vintage" />

            <TextView
                android:id="@+id/wineryListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="3"
                android:text="Winery"
                android:textAppearance="@color/midNightBlack"
                android:textSize="22sp"
                tools:text="Winery" />

        </LinearLayout>

        <TextView
            android:id="@+id/designationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textAppearance="@color/midNightBlack"
            android:text="Designation"
            tools:text="Designation" />

        <TextView
            android:id="@+id/varietalListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Varietal"
            android:textAppearance="@color/midNightBlack"
            android:textSize="16sp"
            tools:text="Varietal" />

    </LinearLayout>
</LinearLayout>
