<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vines7"
    android:orientation="horizontal"
    tools:context="edu.orangecoastcollege.cs273.jburk.winetasting.AddPhotoActivity">

    <ImageView
        android:id="@+id/wineBottleIV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/add_photo"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal_background"/>

    <TextView
        android:id="@+id/wineInfoTV"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:layout_marginTop="100dp"
        android:text=""
        android:textSize="32sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="100dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/addPhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:onClick="selectWineImage"
            android:layout_marginTop="100dp"
            android:text="@string/add_photo"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/addWineInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textSize="32sp"/>

    </LinearLayout>

</LinearLayout>
