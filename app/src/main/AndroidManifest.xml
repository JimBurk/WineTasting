<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.orangecoastcollege.cs273.jburk.winetasting">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OpenActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".AddTasting"
            android:screenOrientation="landscape"
            android:label="Wine Tasting Notes - Add Tasting">
        </activity>
        <activity
            android:name=".RatingActivity"
            android:screenOrientation="landscape"
            android:label="Wine Tasting Notes - Add Ratings">
        </activity>
        <activity
            android:name=".WinesActivity"
            android:screenOrientation="landscape"
            android:label="Wine Tasting Notes - Add Wine Details">
        </activity>
        <activity
            android:name=".ReviewTastingsActivity"
            android:screenOrientation="landscape"
            android:label="Wine Tasting Notes - Review Tastings">
        </activity>
        <activity
            android:name=".ReviewWinesActivity"
            android:screenOrientation="landscape"
            android:label="Wine Tasting Notes - Review Wines">
        </activity>
        <activity
            android:name=".AddPhotoActivity"
            android:screenOrientation="landscape"
            android:label="Wine Tasting Notes - Add Label Photos">
        </activity>
        <activity android:name=".WineLocationListActivity"
                  android:label="Wine Tasting Notes - Wine Locations">
        </activity>
        <activity
            android:name=".WineLocationDetailActivity"
            android:screenOrientation="landscape"
            android:label="Wine Tasting Notes - Specific Wine Location">
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key">
        </meta-data>

    </application>

</manifest>